<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Tentang1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo2_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/bellotatext_regular"
            android:padding="20dp"
            android:text="@string/sistem_berbasis_cerdas_yang_dapat_memprediksi_nilai_karbon_suatu_lahan_serta_mendukung_pengambilan_data_karbon_secara_otomatis_melalui_drone"
            android:textAlignment="center"
            android:textColor="#101012"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@mipmap/logo_drone_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/bellotatext_regular"
            android:text="@string/automationsystem"
            android:textColor="@color/blue"
            android:textSize="16sp" />


    </LinearLayout>


</FrameLayout>